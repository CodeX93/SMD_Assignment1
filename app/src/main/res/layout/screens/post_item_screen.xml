<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <!-- Item Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Item"
                android:textSize="25sp" />
        </LinearLayout>

        <!-- Two Buttons (Upload Image and Upload Video) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="25dp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Upload Image"
                android:drawableLeft="@drawable/uploadimage"
                android:drawablePadding="8dp"
                android:background="@drawable/dotted_box"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Upload Video"
                android:drawableLeft="@drawable/uploadvideo"
                android:drawablePadding="8dp"
                android:background="@drawable/dotted_box"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/item_name_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Enter item name"
            android:inputType="textCapWords"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hourly Rate"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/hourly_rate_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Enter Name"
            android:inputType="numberDecimal"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/description_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Enter Description"
            android:inputType="text"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" />


        <Spinner
            android:id="@+id/country_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:hint="Select City" />

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Post item"
           android:textSize="25sp"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:background="#ff852e"
           android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>
